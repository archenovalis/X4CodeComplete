{
  "name": "x4codecomplete",
  "displayName": "X4CodeComplete",
  "description": "There is an unofficial X4: Foundations extension for Visual Studio Code that provides autocompletion and syntax highlighting for XML files used in the game modding.",
  "version": "1.5.4",
  "icon": "icons/X4CodeComplete128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/archenovalis/X4CodeComplete"
  },
  "publisher": "X4CodeComplete",
  "license": "MIT",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "x4CodeComplete.loadLanguageFiles",
        "title": "X4 Code Complete: Process Language Files"
      },
      {
        "command": "x4CodeComplete.loadExtractedFiles",
        "title": "X4 Code Complete: Process Extracted Files"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "X4 Code Complete Settings",
      "properties": {
        "x4CodeComplete.debug": {
          "type": "boolean",
          "default": false,
          "description": "Verbose logging for debugging purposes. This will log detailed information and may degrade performance."
        },
        "x4CodeComplete.extensionsFolder": {
          "type": "string",
          "default": "",
          "description": "Path to extensions \"library\" folder"
        },
        "x4CodeComplete.languageNumber": {
          "type": "string",
          "default": "44",
          "description": "Preferred language number (e.g., '44' for English). Files matching this number will be displayed first"
        },
        "x4CodeComplete.limitLanguageOutput": {
          "type": "boolean",
          "default": false,
          "description": "Show only preferred language in hover text"
        },
        "x4CodeComplete.reloadLanguageData": {
          "type": "boolean",
          "default": false,
          "description": "Reload language files (resets to false after reload). Useful for refreshing language files without restarting the extension."
        },
        "x4CodeComplete.unpackedFileLocation": {
          "type": "string",
          "default": "",
          "description": "Path to folder with vanilla extracted files"
        },
        "x4CodeComplete.validateXmlStructure": {
          "type": "boolean",
          "default": false,
          "description": "Enable XML structure validation and warnings (may impact performance)"
        }
      }
    }
  },
  "scripts": {
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-ts": "tsc -p ./",
    "compile-ts-clean": "rimraf out && tsc -p ./",
    "compile-all": "rimraf out dist && npm run compile-ts && npm run compile",
    "clean": "rimraf out dist",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.17.1",
    "@types/sax": "^1.2.7",
    "@types/vscode": "^1.102.0",
    "@types/xml2js": "~0.4.14",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.33.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "minimatch": "^10.0.3",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.2",
    "tslint": "^5.20.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@xmldom/xmldom": "~0.9.8",
    "sax": "^1.4.1",
    "winston": "^3.17.0",
    "winston-transport-vscode": "^0.1.0",
    "xml2js": "^0.6.2",
    "xpath": "^0.0.34",
    "xsd-lookup": "^1.10.1"
  }
}
